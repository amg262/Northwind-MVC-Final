@using Northwind.Models
@model IEnumerable<Discount>

<ul class="list-group list-group-flush">
    @foreach (Discount discount in Model)
    {
        <li class="list-group-item">
            <div class="col discounts px-2 py-4">
                <h3>@discount.Title</h3>
                <div class="mb-4">
                    @discount.Description
                </div>
                <i>Discount expires: @discount.EndTime.ToString("MM/dd/yyyy")</i><br />
                <a href="#" class="code" data-code="@discount.Code" data-product="@discount.Title"><i
                    class="far fa-hand-point-right"></i> Discount Code</a>
            </div>
        </li>
    }
</ul>

<!-- toast -->
<div id="toast" class="toast">
    <div class="toast-header">
        <strong class="mr-auto" id="product">Product Name</strong>
        <button type="button" class="ml-2 mb-1 close" data-dismiss="toast" aria-label="Close">
            <span aria-hidden="true">&times;</span>
        </button>
    </div>
    <div class="toast-body">
        Discount Code: <strong id="code">CODE</strong>
    </div>
</div>

@section Scripts {
<script type="text/javascript" src="~/js/client.js"></script>
}